    <SOURCE>`
  DATA length TYPE i.

  super-&gt;constructor( ).

  length = XSTRLEN( run_id ).
*  ASSERT factory_mode IS NOT INITIAL OR length = 16.
  ASSERT run_id IS INITIAL OR length = 16.

  IF run_id IS INITIAL.
    CREATE OBJECT o_job_monitoring.
    CREATE OBJECT me-&gt;o_categories.
    CREATE OBJECT o_informations
      EXPORTING
        o_process = me.
    CREATE OBJECT o_messaging
      EXPORTING
        o_process = me.
    CREATE OBJECT o_objects
      EXPORTING
        o_run = me.
    SET HANDLER handle_objects_confirmation FOR o_objects.
    SET HANDLER handle_submit_thread FOR o_job_monitoring.
    SET HANDLER handle_before_sleep_mode FOR o_job_monitoring.
    f_has_changed = abap_true.
    status = ygpl_mt_status=&gt;starting.
    is_new = abap_true.
  ELSE.
    is_new = abap_false.
    me-&gt;process_id = run_id.
    read( ).
  ENDIF.</SOURCE>
