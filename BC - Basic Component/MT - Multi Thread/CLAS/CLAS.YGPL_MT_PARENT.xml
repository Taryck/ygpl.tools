    <SOURCE>`
  DATA o_msg    TYPE to_messaging.
  DATA it_list  TYPE ygpl_mt_job_monitoring=&gt;tt_joblist.
  DATA s_condition TYPE ts_running_conditions.
  FIELD-SYMBOLS &lt;j&gt; LIKE LINE OF task_list.

  CHECK me-&gt;max_memory &lt;&gt; max_memory.
  o_job_monitoring-&gt;check_active_threads( ).
  IF o_job_monitoring-&gt;threads &gt; 0.
* Task running
    it_list = o_job_monitoring-&gt;get_job_list( ).
    IF LINES( it_list ) &gt; LINES( task_list ).
* Lock required
      ASSERT 0 = 1.   &quot; #TO_do
    ENDIF.
    LOOP AT task_list ASSIGNING &lt;j&gt;.
      s_condition-max_memory = max_memory.
* Send message
* #TO_do
*      CREATE OBJECT o_msg
*        EXPORTING
*          process_id   = &lt;j&gt;-process_id
*          o_categories = o_categories.
      o_msg-&gt;send_system_message( category = system_categories-condition
                                   message = s_condition ).
    ENDLOOP.
  ENDIF.
  me-&gt;max_memory = max_memory.</SOURCE>
