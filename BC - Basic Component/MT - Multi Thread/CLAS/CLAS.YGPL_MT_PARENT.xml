   <ITEM CMPNAME="SET_THREAD_COUNT" EXPOSURE="2" STATE="1" MTDNEWEXC="X">
    <TEXTS>
     <ITEM LANG="E" TEXT="Change the thread count value"/>
    </TEXTS>
    <PARAMETERS>
     <ITEM SCONAME="THREAD_COUNT" CMPTYPE="1" PARPASSTYP="1" TYPTYPE="1" TYPE="TD_COUNT">
      <TEXTS>
       <ITEM LANG="E" TEXT="Number of thread to launch"/>
      </TEXTS>
     </ITEM>
    </PARAMETERS>
    <EXCEPTIONS>
     <ITEM SCONAME="YGPL_MT_CX" LANGU="E">
      <TEXTS>
       <ITEM LANG="E" TEXT="MultyThread : Root exception class"/>
      </TEXTS>
     </ITEM>
    </EXCEPTIONS>
    <SOURCE>`
  DATA it_list  TYPE ygpl_mt_job_monitoring=&gt;tt_joblist.
  DATA nb_stop  TYPE i.
  FIELD-SYMBOLS &lt;j&gt; LIKE LINE OF task_list.

  CHECK o_job_monitoring IS BOUND.
  CHECK infos-threads &lt;&gt; thread_count.
  f_has_changed = abap_true.
  IF o_job_monitoring-&gt;threads = 0.
    infos-threads = thread_count.
  ELSE.
    nb_stop = infos-threads - thread_count.
    IF nb_stop &lt; 0.
      ASSERT 0 = 1.   &quot; # To do
    ELSE.
* Task running
      it_list = o_job_monitoring-&gt;get_job_list( ).
      IF LINES( task_list ) &lt; nb_stop.
* Lock required
        ASSERT 0 = 1.   &quot; # To do
      ENDIF.
* To improve
      LOOP AT task_list ASSIGNING &lt;j&gt; TO nb_stop.
        stop_task( &lt;j&gt;-process_id ).
      ENDLOOP.
    ENDIF.
  ENDIF.</SOURCE>
