     </ITEM>
     <ITEM SCONAME="MAX_MEMORY" CMPTYPE="1" PARPASSTYP="1" TYPTYPE="1" TYPE="TD_MEMORY_SIZE">
      <TEXTS>
       <ITEM LANG="E" TEXT="Maximum memory size task might use"/>
      </TEXTS>
     </ITEM>
     <ITEM SCONAME="RESULT" CMPTYPE="1" PARDECLTYP="3" TYPTYPE="1" TYPE="TO_ME">
      <TEXTS>
       <ITEM LANG="E" TEXT="MT : Run Process"/>
      </TEXTS>
     </ITEM>
     <ITEM SCONAME="THREAD_COUNT" CMPTYPE="1" PARPASSTYP="1" TYPTYPE="1" TYPE="TD_COUNT">
      <TEXTS>
       <ITEM LANG="E" TEXT="Number of thread to launch"/>
      </TEXTS>
     </ITEM>
     <ITEM SCONAME="WEIGHT_FN" CMPTYPE="1" PARPASSTYP="1" TYPTYPE="1" TYPE="TD_FN" PAROPTIONL="X">
      <TEXTS>
       <ITEM LANG="E" TEXT="Name of the field in object data table where obj. weight is"/>
      </TEXTS>
     </ITEM>
    </PARAMETERS>
    <SOURCE>`
  DATA run_id TYPE td_process_id.

  factory_mode = abap_true.
  CREATE OBJECT result
    EXPORTING
      run_id = run_id.
  CLEAR factory_mode.

  IF categories IS BOUND.   result-&gt;o_categories = categories.    ELSE.     CREATE OBJECT result-&gt;o_categories.   ENDIF.
  CREATE OBJECT result-&gt;o_messaging
    EXPORTING
      run_id     = result-&gt;process_id
      categories = result-&gt;o_categories.
  SET HANDLER result-&gt;handle_objects_confirmation FOR result-&gt;o_messaging.

  result-&gt;set_thread_count( thread_count ).
  result-&gt;set_bloc_size( bloc_size ).</SOURCE>
