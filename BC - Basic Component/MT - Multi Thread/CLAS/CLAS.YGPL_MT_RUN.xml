  <REDEFINITIONS>
   <ITEM REFCLSNAME="YGPL_MT_PROCESS" MTDNAME="SAVE">
    <SOURCE>`
  DATA _run TYPE ygpl_run.

  CHECK from_factory = abap_true.
  super-&gt;save( ).

  _run-run_id = process_id.
  _run-threads = infos-threads.
  _run-obj_left = o_objects-&gt;total_objects.
  _run-bloc_size = infos-bloc_size.
  _run-timestamp = times-start.
  _run-blocs = o_objects-&gt;total_blocs_count.
  MODIFY ygpl_run FROM _run.
  ASSERT sy-subrc = 0.</SOURCE>
